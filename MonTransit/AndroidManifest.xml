<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.montrealtransit.android" android:versionName="1.0.1"
	android:versionCode="197" android:installLocation="auto">

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- TraceView uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /-->
	<!-- mock location dev uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" /-->
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8" />
	<supports-screens android:smallScreens="false" android:normalScreens="true" android:largeScreens="true"
		android:anyDensity="true" />

	<application android:icon="@drawable/ic_launcher_icon" android:label="@string/app_name"
		android:description="@string/app_desc" android:theme="@android:style/Theme.NoTitleBar"
		android:debuggable="false">
		<meta-data android:name="android.app.default_searchable" android:value=".activity.SearchResult" />
		<!-- PROVIDERs -->
		<provider android:name=".provider.DataProvider"
			android:authorities="org.montrealtransit.android.data" />
		<provider android:name=".provider.StmProvider"
			android:authorities="org.montrealtransit.android" />
		<!-- MAIN SCREEN -->
		<activity android:name=".activity.MainScreen" android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<!-- LIVE FOLDER -->
		<activity android:name=".activity.FavListLiveFolder"
			android:label="@string/favorite_live_folder_name_in_the_menu">
			<intent-filter>
				<action android:name="android.intent.action.CREATE_LIVE_FOLDER" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.FavListTab" />
		<activity android:name=".activity.BusStopCodeTab" />
		<activity android:name=".activity.BusLineListTab" />
		<activity android:name=".activity.BusLineInfo"
			android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".activity.BusStopInfo"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter android:label="@string/viewBusStopInfo"
				android:launchMode="singleTask">
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data
					android:mimeType="vnd.android.cursor.item/vnd.org.montrealtransit.android.provider.busstopslivefolder" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.SubwayStationInfo"
			android:configChanges="orientation|keyboardHidden" />
		<activity android:name=".activity.SubwayLinesListTab" />
		<activity android:name=".activity.SubwayLineInfo"
			android:configChanges="orientation|keyboardHidden" />
		<!-- PREFERENCES -->
		<activity android:name=".activity.UserPreferences" />
		<!-- SEARCH RESULT ACTIVITY -->
		<activity android:name=".activity.SearchResult"
			android:theme="@android:style/Theme"
			android:launchMode="singleTop">
			<intent-filter>
			    <action android:name="android.intent.action.SEARCH" />
			    <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable" android:resource="@xml/searchable" />
		</activity>
	</application>
</manifest> 