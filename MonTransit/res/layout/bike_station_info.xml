<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <!-- ADs -->
    <include
        android:id="@id/ad_layout"
        layout="@layout/ad_layout" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ad_layout"
        android:orientation="vertical" >
        <!-- SUBWAY STATION INFORMATIONS -->
        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:background="@android:drawable/title_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >
            <!-- BIKE LOGO -->
            <ImageView
                android:id="@+id/img"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginRight="7dip"
                android:gravity="center_horizontal"
                android:src="@drawable/bike_white" />
            <!-- FAVORITE ICON -->
            <CheckBox
                android:id="@+id/star"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:onClick="addOrRemoveFavorite" />
            <!-- STATION NAME -->
            <TextView
                android:id="@+id/station_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:layout_marginTop="5dip"
                android:layout_toLeftOf="@id/star"
                android:layout_toRightOf="@id/img"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/ellipsis"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/nofocustext"
                android:textStyle="bold" />
            <!-- DISTANCE -->
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/station_name"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@id/station_name"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <!-- SCHEDULE -->
                <RelativeLayout
                    android:id="@+id/availability_title"
                    android:layout_width="fill_parent"
                    android:layout_height="25dip"
                    android:background="@drawable/dark_header_dither" >
                    <ImageView
                        android:id="@+id/info_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_btn_info_details" />
                    <ImageView
                        android:id="@+id/availability_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:background="@android:drawable/list_selector_background"
                        android:focusable="true"
                        android:onClick="refreshStatus"
                        android:src="@drawable/ic_btn_refresh"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/availability_title_string"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toLeftOf="@id/availability_refresh"
                        android:layout_toRightOf="@id/info_logo"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/bike_station_status"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <ProgressBar
                        android:id="@+id/availability_title_progress_bar"
                        style="?android:attr/android:progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:indeterminate="true"
                        android:visibility="invisible" />
                </RelativeLayout>
                <include
                    android:id="@+id/availability_loading"
                    android:layout_width="fill_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    layout="@layout/loading_small_layout"
                    android:visibility="visible" />
                <RelativeLayout
                    android:id="@+id/availability"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone" >
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true" />
                    <TextView
                        android:id="@+id/progress_bike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/progress_bar"
                        android:layout_marginLeft="2dip"
                        android:text="@string/ellipsis"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    <TextView
                        android:id="@+id/progress_dock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/progress_bar"
                        android:layout_marginRight="2dip"
                        android:text="@string/ellipsis"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>
                <!-- OTHER BIKE STATIONS -->
                <RelativeLayout
                    android:id="@+id/closest_bike_stations"
                    android:layout_width="fill_parent"
                    android:layout_height="25dip"
                    android:background="@drawable/dark_header_dither"
                    android:visibility="visible" >
                    <ImageView
                        android:id="@+id/bike_station_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_btn_bike" />
                    <TextView
                        android:id="@+id/bus_line_text"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/bike_station_logo"
                        android:gravity="center_vertical"
                        android:text="@string/closest_bike_stations"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <include
                    android:id="@+id/closest_stations_loading"
                    android:layout_width="fill_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    layout="@layout/loading_small_layout" />
                <LinearLayout
                    android:id="@+id/closest_stations"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>