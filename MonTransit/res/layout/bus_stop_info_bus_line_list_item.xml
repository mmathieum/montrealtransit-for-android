<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingLeft="3dip" android:paddingRight="3dip">
	<!-- BUS LINE TYPE -->
	<ImageView android:id="@+id/line_type" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_alignParentRight="true"
		android:layout_marginRight="5dip" android:layout_marginTop="10dip"
		android:gravity="center" />
	<!-- BUS LINE NUMBER -->
	<TextView android:id="@+id/line_number" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_alignParentLeft="true"
		android:layout_marginRight="5dip" android:textSize="32sp"
		android:textStyle="bold" android:gravity="center_horizontal" />
	<!-- BUS LINE NAME -->
	<TextView android:id="@+id/line_name" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_marginTop="3dip" android:layout_toRightOf="@id/line_number"
		android:layout_toLeftOf="@id/line_type" android:singleLine="true"
		android:ellipsize="marquee" android:gravity="center_vertical|left"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	<!-- BUS LINE HOUR STRING -->
	<TextView android:id="@+id/hours_string" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/line_name"
		android:layout_toRightOf="@id/line_number"
		android:layout_alignParentBottom="true" android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="@string/hours_string" />
	<!-- BUS LINE HOURS -->
	<TextView android:id="@+id/hours" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/hours_string"
		android:layout_alignParentBottom="true" android:layout_alignBaseline="@id/hours_string"
		android:layout_toLeftOf="@id/line_type" android:layout_marginRight="3dip"
		android:layout_marginLeft="5dip" android:textAppearance="?android:attr/textAppearanceSmall"
		android:textStyle="bold" />
</RelativeLayout>