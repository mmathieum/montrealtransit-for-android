<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/bus_line_view"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:padding="5dip"
	android:background="@android:drawable/list_selector_background"
	android:focusable="true">

	<!-- BUS LINE TYPE -->
	<ImageView android:id="@+id/line_type"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" />
	<!-- BUS LINE NUMBER -->
	<TextView android:id="@+id/line_number"
		android:layout_width="wrap_content"	android:layout_height="wrap_content" 
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
		android:layout_marginRight="8dip" android:layout_marginTop="-8dip"
		android:textSize="40sp" android:textStyle="bold"/>
	<!-- BUS LINE NAME -->
	<TextView android:id="@+id/line_name"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@id/line_number" android:layout_toLeftOf="@id/line_type"
		android:singleLine="true" android:ellipsize="marquee" android:gravity="center_vertical|left"
		android:layout_marginRight="3dip"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	<!-- BUS SCHEDULE STRING -->
	<TextView android:id="@+id/hours_string"
		android:layout_width="wrap_content"	android:layout_height="wrap_content"
		android:layout_below="@id/line_name" android:layout_toRightOf="@id/line_number"
		android:layout_alignParentBottom="true"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="@string/hours_string" />
	<!-- BUS SCHEDULE -->
	<TextView android:id="@+id/hours"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/hours_string" android:layout_toLeftOf="@id/line_type"
		android:layout_alignBaseline="@id/hours_string"
		android:layout_marginRight="3dip" android:layout_marginLeft="5dip"
		android:textAppearance="?android:attr/textAppearanceSmall" android:textStyle="bold" />

</RelativeLayout>