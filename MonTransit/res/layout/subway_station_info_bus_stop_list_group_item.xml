<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="50dip"
	android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
	android:paddingRight="5dip" android:paddingTop="5dip" android:paddingBottom="5dip">

	<!-- BUS LINE TYPE IMG -->
	<ImageView android:id="@+id/line_type"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_alignParentRight="true"
		android:gravity="center_vertical" />
	<!-- BUS LINE NUMBER -->
	<TextView android:id="@+id/line_number"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_alignParentLeft="true"
		android:gravity="center_vertical" android:layout_marginRight="5dip"
		android:textSize="30sp" android:textStyle="bold" />
	<!-- BUS LINE NAME -->
	<TextView android:id="@+id/line_name"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_toRightOf="@id/line_number" android:layout_toLeftOf="@id/line_type"
		android:layout_alignParentTop="true" android:layout_alignBaseline="@id/line_number" 
		android:singleLine="true" android:ellipsize="marquee" android:gravity="center_vertical|left"
		android:layout_marginRight="3dip"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	

</RelativeLayout>