<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <!-- TITLE -->
    <RelativeLayout
        android:id="@+id/bus_title"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="@drawable/dark_header_dither" >
        <ImageView
            android:id="@+id/title_logo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:src="@drawable/ic_btn_grid" />
        <ImageView
            android:id="@+id/title_switcher"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/list_selector_background"
            android:focusable="true"
            android:onClick="switchView"
            android:src="@drawable/ic_btn_location"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/title_refresh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/title_switcher"
            android:background="@android:drawable/list_selector_background"
            android:focusable="true"
            android:onClick="refreshOrStopRefreshClosestStops"
            android:src="@drawable/ic_btn_refresh"
            android:visibility="gone" />
        <ProgressBar
            android:id="@+id/title_progress_bar"
            style="?android:attr/android:progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="7dip"
            android:layout_toLeftOf="@id/title_switcher"
            android:indeterminate="true"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/title_progress_bar"
            android:layout_toRightOf="@id/title_logo"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/lines"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!-- BUS LINEs -->
    <include
        android:id="@+id/bus_lines_loading"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        layout="@layout/loading_small_layout"
        android:visibility="visible" />
    <GridView
        android:id="@+id/bus_lines"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="77dp"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp"
        android:visibility="gone"
        tools:listitem="@layout/bus_tab_bus_line_grid_item" >
    </GridView>
    <!-- CLOSEST BUS STOPs -->
    <ViewStub
        android:id="@+id/closest_stops_loading_stub"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:inflatedId="@+id/closest_stops_loading"
        android:layout="@layout/loading_layout"
        android:visibility="gone" />
    <ViewStub
        android:id="@+id/closest_stops_stub"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout="@layout/bus_tab_closest_stops"
        android:visibility="gone" />
</LinearLayout>