<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <!-- ADs -->
    <include
        android:id="@id/ad_layout"
        layout="@layout/ad_layout" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ad_layout"
        android:orientation="vertical" >
        <!-- BUS STOP INFORMATIONS -->
        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:background="@android:drawable/title_bar"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="0dip"
            android:paddingLeft="0dip"
            android:paddingRight="5dip"
            android:paddingTop="0dip" >
            <!-- BUS LINE -->
            <LinearLayout
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:paddingRight="5dip" >
                <!-- BUS LINE NUMBER -->
                <TextView
                    android:id="@+id/line_number"
                    style="@style/BusLineNumber"
                    android:layout_width="66dip"
                    android:layout_height="44dip"
                    android:textSize="33dip"
                    android:text="@string/default_line_number" />
                <!-- BUS LINE DIRECTION -->
                <TextView
                    android:id="@+id/line_direction"
                    android:layout_width="66dip"
                    android:layout_height="fill_parent"
                    android:background="#000000"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingRight="2dip"
                    android:singleLine="true"
                    android:text="@string/ellipsis"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- FAVORITE ICON -->
             <CheckBox
                android:id="@+id/star"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
               	android:layout_centerVertical="true"
                android:onClick="addOrRemoveFavorite" />
            <!-- BUS STOP PLACE -->
            <TextView
                android:id="@+id/bus_stop_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
               	android:layout_toLeftOf="@id/star"
                android:paddingTop="10dip"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/ellipsis"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/nofocustext" />
            <!-- BUS STOP CODE -->
            <TextView
                android:id="@+id/stop_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/bus_stop_place"
       			android:layout_below="@+id/bus_stop_place"
                android:layout_toRightOf="@+id/line"
                android:padding="0dip"
                android:singleLine="true"
                android:text="@string/default_bus_stop_code"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />
            <!-- DISTANCE -->
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bus_stop_place"
                android:layout_toLeftOf="@id/star"
                android:layout_alignParentBottom="true"
                android:layout_alignWithParentIfMissing="true"
                android:text="@string/ellipsis"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" />
            <!-- COMPASS -->
            <ImageView
                android:id="@+id/compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/distance"
                android:layout_toLeftOf="@id/distance"
                android:layout_below="@id/bus_stop_place"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="3dip"
                android:scaleType="matrix"
                android:src="@drawable/heading_arrow_light"
                android:visibility="gone" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <!-- NEXT BUS STOPS -->
                <RelativeLayout
                    android:id="@+id/next_stops_title"
                    android:layout_width="fill_parent"
                    android:layout_height="25dip"
                    android:background="@drawable/dark_header_dither" >
                    <ImageView
                        android:id="@+id/clock_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_btn_clock" />
                    <ImageView
                        android:id="@+id/next_stops_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:background="@android:drawable/list_selector_background"
                        android:focusable="true"
                        android:onClick="refreshOrStopRefreshNextStops"
                        android:src="@drawable/ic_btn_refresh"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/next_stops_section_info"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toLeftOf="@id/next_stops_refresh"
                        android:background="@android:drawable/list_selector_background"
                        android:focusable="true"
                        android:onClick="showNextStopsInfoDialog"
                        android:src="@drawable/ic_btn_info_details" />
                    <TextView
                        android:id="@+id/next_stops_string"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toLeftOf="@id/next_stops_section_info"
                        android:layout_toRightOf="@id/clock_logo"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/next_bus_stops"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <ProgressBar
                        android:id="@+id/progress_bar_next_stop"
                        style="?android:attr/android:progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:indeterminate="true"
                        android:visibility="invisible" />
                </RelativeLayout>
                <include
                    android:id="@+id/next_stops_loading"
                    layout="@layout/loading_layout" />
                <HorizontalScrollView
                    android:id="@+id/next_stops_group"
                    android:layout_width="fill_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:padding="5dip" >
                        <TextView
                            android:id="@+id/the_next_stop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13dip"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="40dip"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/the_second_next_stop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="35dip" />
                        <TextView
                            android:id="@+id/other_stops"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="30dip" />
                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/next_stops_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/next_stops_msg2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />
                <!-- OTHER BUS LINEs -->
                <RelativeLayout
                    android:id="@+id/other_bus_line"
                    android:layout_width="fill_parent"
                    android:layout_height="25dip"
                    android:background="@drawable/dark_header_dither"
                    android:visibility="gone" >
                    <ImageView
                        android:id="@+id/bus_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_btn_bus" />
                    <TextView
                        android:id="@+id/other_bus_line_text"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/bus_logo"
                        android:gravity="center_vertical"
                        android:text="@string/other_bus_line"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <HorizontalScrollView
                    android:id="@+id/other_bus_lines"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <LinearLayout
                        android:id="@+id/other_bus_line_list"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:padding="2dip" />
                </HorizontalScrollView>
                <!-- SUBWAY STATION -->
                <RelativeLayout
                    android:id="@+id/subway_station"
                    android:layout_width="fill_parent"
                    android:layout_height="25dip"
                    android:background="@drawable/dark_header_dither"
                    android:visibility="gone" >
                    <ImageView
                        android:id="@+id/subway_station_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_btn_subway" />
                    <TextView
                        android:id="@+id/subway_station_text"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@id/subway_station_logo"
                        android:gravity="center_vertical"
                        android:text="@string/subway_station"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <include
                    android:id="@+id/the_subway_station"
                    layout="@layout/bus_stop_info_subway_line_list_item" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>