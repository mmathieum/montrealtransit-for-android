<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@android:drawable/list_selector_background"
    android:clipChildren="false">
    <!-- FAVORITE IMG -->
    <ImageView
        android:id="@+id/fav_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginBottom="-18dip"
        android:layout_marginRight="-16dip"
        android:scaleType="center"
        android:src="@drawable/star_dark"
        android:visibility="gone" />
    <!-- BUS LINE -->
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:paddingRight="5dip" >
        <!-- BUS LINE NUMBER -->
        <TextView
            android:id="@+id/line_number"
            style="@style/BusLineNumberSmall"
            android:text="@string/default_route_short_name" />
        <!-- BUS LINE DIRECTION -->
        <TextView
            android:id="@+id/line_direction"
            android:layout_width="66dip"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:ellipsize="marquee"
            android:gravity="center_vertical|right"
            android:paddingRight="2dip"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="@string/ellipsis"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <!-- DISTANCE -->
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"
        android:paddingRight="5dip"
        android:gravity="center_vertical"
        android:text="@string/ellipsis"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />
    <!-- COMPASS -->
    <ImageView
        android:id="@+id/compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/distance"
        android:scaleType="matrix"
        android:src="@drawable/heading_arrow"
        android:visibility="gone" />
    <!-- BUS STOP PLACE -->
    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@+id/line"
        android:layout_toLeftOf="@id/compass"
        android:layout_marginTop="1dip"
        android:paddingLeft="0dip"
        android:paddingTop="10dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/ellipsis"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <!-- BUS STOP CODE -->
    <TextView
        android:id="@+id/stop_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label"
        android:layout_below="@+id/label"
        android:layout_marginTop="-5dip"
        android:paddingLeft="0dip"
        android:text="@string/default_stop_code"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />
</RelativeLayout>